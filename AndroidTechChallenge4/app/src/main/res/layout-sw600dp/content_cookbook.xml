<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="captechventures.com.techchallenge4.cookbook.CookbookActivity"
    tools:showIn="@layout/activity_cookbook"
    android:weightSum="3"
    android:background="@color/grayDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/fragment_cookbook_first"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/fragment_margin"
            android:background="@color/white"
            >
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fragment_cookbook_second"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/fragment_margin"
            android:background="@color/white"
            >
        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_cookbook_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="@dimen/fragment_margin"
        android:background="@color/white"
        >
    </FrameLayout>

</LinearLayout>
